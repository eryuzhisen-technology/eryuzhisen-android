<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    tools:context="com.eryuzhisen.android.activity.LoginSignupActivity">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@mipmap/icon_close"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/login_logo" />

    <Button
        android:background="@drawable/bg_loginbutton_default"
        android:id="@+id/btLogin"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginBottom="55dp"
        android:text="@string/login_str"
        android:textColor="@color/fontColor1"
        android:textSize="@dimen/fontSize6"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btRegister"
        android:layout_alignStart="@+id/btRegister" />

    <Button
        android:background="@drawable/bg_loginbutton_selected"
        android:id="@+id/btRegister"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btLogin"
        android:layout_marginBottom="15dp"
        android:text="@string/register_str"
        android:textColor="@color/fontColor1"
        android:textSize="@dimen/fontSize6"
        android:textStyle="bold" />

</RelativeLayout>
